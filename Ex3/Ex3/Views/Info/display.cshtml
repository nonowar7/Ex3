
@{
    Layout = null;
}
    
<!DOCTYPE html>

<html>
<head>
    <style>
        .bg1 {
            width:100%;
            height:100%;
            background-size:cover;
        }

    </style>
    <meta name="viewport" content="width=device-width" />
    <title>display</title>
</head>
<body background="~/Images/export-map-share.png" class="bg1">
    <canvas id="myCanvas"></canvas>
    <script>

        var canvas = document.getElementById("myCanvas");
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        var ctx = canvas.getContext("2d");

        var theLat = (((@ViewBag.lat) + 90) * canvas.height / 360);
        if ((@ViewBag.lat) < 0) {
            theLat = canvas.height - theLat; 
        }

        var theLon = ((@ViewBag.lon) + 180) * canvas.width / 380;

        ctx.beginPath();
        ctx.strokeStyle = "red";
        ctx.fillStyle = "red";
        ctx.arc(theLon, theLat, 5, 0, 2 * Math.PI);
        ctx.fill();
        ctx.stroke();
       
    </script>
</body>
</html>
